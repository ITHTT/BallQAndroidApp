<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/edit_text_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_edit_user_nickname_bg"
        android:hint="修改昵称"
        android:maxLength="30"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:textColor="@color/c_3a3a3a"
        android:textColorHint="@color/c_3a3a3a"
        android:textSize="14sp"
        android:typeface="monospace"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-1dp"
            android:layout_marginRight="-1dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edit_user_nickname_cancel_bg"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="取消"
            android:textColor="#a8a8a8"
            android:textSize="14sp"
            android:typeface="monospace" />

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="1dp"
                android:contentDescription="@string/app_name"
                android:layout_height="match_parent"
                android:background="@color/gold" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/app_name"
                android:background="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-1dp"
            android:layout_marginStart="-1dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edit_user_nickname_commit_bg"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:typeface="monospace" />
    </LinearLayout>
</LinearLayout>