<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@null"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/dimen15dp"
        android:layout_height="@dimen/dimen15dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/ic_ballq_logo"/>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen12sp"
        android:layout_marginLeft="@dimen/dimen5dp"
        android:layout_marginStart="@dimen/dimen5dp"
        android:text="0"
        android:textColor="@color/c_3a3a3a"/>
</LinearLayout>