<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <com.tysci.ballq.views.widgets.ExtendedViewPager
        android:id="@+id/image_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:background="#0000"/>

    <TextView

        android:id="@+id/tv_image_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/shape_image_browser_dialog"
        android:paddingBottom="6dp"
        android:paddingLeft="@dimen/dimen10dp"
        android:paddingRight="@dimen/dimen10dp"
        android:paddingTop="6dp"
        android:text="1/9"
        android:textColor="@color/white"
        android:textSize="15sp"/>
</RelativeLayout>