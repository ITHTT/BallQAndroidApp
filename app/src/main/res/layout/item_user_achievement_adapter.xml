<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen7dp"
    android:paddingRight="@dimen/dimen7dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen1dp"
        android:layout_marginTop="@dimen/dimen1dp"
        android:background="#eacb70"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/achievement_logo"
        android:layout_width="@dimen/dimen45dp"
        android:layout_height="@dimen/dimen45dp"
        android:layout_marginTop="@dimen/dimen10dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/achievement_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:gravity="center|top"
        android:lines="3"
        android:text="@string/app_name"
        android:textColor="#3a3a3a"
        android:textSize="13sp"
        android:typeface="monospace" />
</LinearLayout>