<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/layout_title_bar"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.tysci.ballq.views.widgets.NoScrollGridView
            android:id="@+id/gv_leagues"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:numColumns="3"
            android:horizontalSpacing="12dp"
            android:verticalSpacing="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gold"/>
    <RadioGroup
        android:id="@+id/rg_select_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RadioButton
                android:id="@+id/rb_select_all"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:background="@drawable/select_menu_item_selector"
                android:textColor="@drawable/select_league_text_color_selector"
                android:textSize="14sp"
                android:checked="true"
                android:text="全选"
                android:button="@null"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:clickable="false"
                android:layout_gravity="center"
                android:gravity="center"/>
        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RadioButton
                android:id="@+id/rb_select_nothing"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:background="@drawable/select_menu_item_selector"
                android:textColor="@drawable/select_league_text_color_selector"
                android:textSize="14sp"
                android:text="全不选"
                android:button="@null"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:clickable="false"
                android:layout_gravity="center"
                android:gravity="center"/>
        </FrameLayout>
    </RadioGroup>
</LinearLayout>